<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="message, emoji, send"
        app:flow_horizontalGap="5dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <EditText
        android:id="@+id/message"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/emoji_view_background"
        android:ems="10"
        android:hint="@string/Message"
        android:inputType="textPersonName"
        android:paddingStart="@dimen/defaultPadding"
        android:paddingEnd="@dimen/defaultPadding"
        android:textColorHint="@color/gray" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:elevation="0dp"
        android:src="@drawable/round_sentiment_satisfied_alt_24"
        app:backgroundTint="@color/message"
        app:fabCustomSize="40dp"
        app:layout_constraintStart_toEndOf="@id/message"
        app:layout_constraintTop_toTopOf="@id/message"
        app:tint="@color/gray" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:elevation="0dp"
        android:src="@drawable/round_attach_file_24"
        app:backgroundTint="@color/message"
        app:fabCustomSize="40dp"
        app:layout_constraintStart_toEndOf="@id/emoji"
        app:layout_constraintTop_toTopOf="@id/emoji"
        app:tint="@color/gray" />
</androidx.constraintlayout.widget.ConstraintLayout>