<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="marginBetween" format="dimension" />

    <declare-styleable name="EmojiView">
        <attr name="text" format="string" />
        <attr name="emoji" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="marginBetween" />
    </declare-styleable>

    <declare-styleable name="FlexBoxLayout">
        <attr name="marginBetween" />
    </declare-styleable>

    <declare-styleable name="MessageView">
        <attr name="alignment" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="messageCornerRadius" format="dimension" />
        <attr name="messagePadding" format="dimension" />
        <attr name="avatarMessageMargin" format="dimension" />
        <attr name="messageFlexBoxMargin" format="dimension" />
    </declare-styleable>
</resources>